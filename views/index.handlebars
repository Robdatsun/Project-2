<div class="block">
    <article class="message is-dark">
        <div class="message-header has-text-weight-bold">
            <h3 class="title is-3 has-text-white">News</h3>
        </div>
        {{#each news}}
        <div class="message-body">
            {{#each this.data}}
            <a href="{{this.news_url}}">
                <h6 class="title is-6">{{this.title}}</h6>
            </a>
            <p>{{this.text}}</p>
            {{/each}}
        </div>
        {{/each}}
    </article>
</div>