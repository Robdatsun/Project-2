<!-- .hero -->
<section class="hero has-background-black">
    <div class="hero-body">
        <div class="columns is-centered">

            {{#each dow}}
            {{#each this}}
            <div class="column is-one-third has-text-centered">
                <span id="titleS">Dow Jones</span><br>
                <span class="statC price">Price: {{[05. price]}}</span><br>
                <span class="statC change">Change: {{[10. change percent]}}</span><br>
                <span class="statC openS"> Open: {{[02. open]}}</span><br>
                <span class="statC closeS">Previous Close: {{[08. previous close]}}</span><br>
            </div>
            {{/each}}
            {{/each}}

            {{#each nasdaq}}
            {{#each this}}
            <div class="column is-one-third has-text-centered">
                <span id="titleS">Nasdaq</span> <br>
                <span class="statC price">Price: {{[05. price]}}</span><br>
                <span class="statC change"> Change: {{[10. change percent]}}</span><br>
                <span class="statC openS">Open: {{[02. open]}}</span><br>
                <span class="statC closeS">Previous Close: {{[08. previous close]}}</span><br>
            </div>
            {{/each}}
            {{/each}}

            {{#each snp}}
            {{#each this}}
            <div class="column is-one-third has-text-centered">
                <span id="titleS">S &amp; P 500</span> <br>
                <span class="statC price">Price: {{[05. price]}}</span><br>
                <span class="statC change">Change: {{[10. change percent]}}</span><br>
                <span class="statC openS">Open: {{[02. open]}}</span><br>
                <span class="statC closeS">Previous Close: {{[08. previous close]}}</span><br>
            </div>
            {{/each}}
            {{/each}}

        </div>
    </div>
</section>
