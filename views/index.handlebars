<section class="section">
    <div class="container">
        <div class="columns grid-xl">
            <div class="column is-half">
                {{#each stocks}}
                {{#each this}}
                <div class="notification is-light">
                    <button class="delete deleteSymbolBtn" data-id="{{[01. symbol]}}"></button>
                    <strong>{{[01. symbol]}}</strong>
                    <p>Price: {{[05. price]}}</p>
                    <p>Change: {{[10. change percent]}}</p>
                    <p>Open: {{[02. open]}}</p>
                    <p>Previous Close: {{[08. previous close]}}</p>
                </div>
                {{/each}}
                {{/each}}
            </div>
            <div class="column is-half">
                <div class="tradingview-widget-container">
                    <div id="tradingview_c114c"></div>
                    <div class="tradingview-widget-copyright"><a href="https://www.tradingview.com/symbols/NASDAQ-AAPL/"
                            rel="noopener" target="_blank"><span class="blue-text">AAPL Chart</span></a> by TradingView
                    </div>
                </div>
                {{!-- <figure class="image card is-5by4">
                    <img src="https://www.stocktrader.com/wp-content/uploads/2013/12/TradingView-stock-chart.png">
                </figure> --}}
            </div>
        </div>
    </div>
</section>
<!-- /.section -->
