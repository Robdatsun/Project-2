<section class="section">
    <div class="container">
        <div class="columns grid-xl">
            <div class="column is-half">
                {{#each stocks}}
                {{#each this}}
                <div class="notification is-light has-background-grey-lighter">
                    <button class="delete deleteSymbolBtn" data-id="{{[01. symbol]}}"></button>
                    <strong id="title2">{{[01. symbol]}}</strong>
                    <p id="price2">Price: {{[05. price]}}</p>
                    <p id="change2">Change: {{[10. change percent]}}</p>
                    <p id="openS2">Open: {{[02. open]}}</p>
                    <p id="closeS2">Previous Close: {{[08. previous close]}}</p>
                </div>
                {{/each}}
                {{/each}}
            </div>
            <div class="column is-half">
                <!--tradingview-widget-->
                <div class="tradingview-widget-container">
                    <div id="tradingview_c114c"></div>
                    <div class="tradingview-widget-copyright"><a href="https://www.tradingview.com/symbols/NASDAQ-AAPL/"
                            rel="noopener" target="_blank"><span class="blue-text">AAPL Chart</span></a> by TradingView
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
