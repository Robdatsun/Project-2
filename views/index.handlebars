<section class="section">
    <div class="container">
        <div class="columns grid-xl">
            <div class="column is-half">
                {{#each stocks}}
                {{#each this}}
                <div class="notification is-light has-background-grey-lighter">

                    <strong id="title2">{{[01. symbol]}}</strong>
                    <p id="price2">Price: {{[05. price]}}</p>
                    <p id="change2">Change: {{[10. change percent]}}</p>
                    <p id="openS2">Open: {{[02. open]}}</p>
                    <p id="closeS2">Previous Close: {{[08. previous close]}}</p>

                </div>
                {{/each}}
                {{/each}}
            </div>
            <div class="column is-half">
                <figure class="image card is-5by4">
                    <img src="https://www.stocktrader.com/wp-content/uploads/2013/12/TradingView-stock-chart.png">
                </figure>
            </div>
        </div>
    </div>
</section>
